# Azure Search Configuration
# The name of your Azure Search service
AZURE_SEARCH_NAME = "your-search-service-name"

# The admin key for your Azure Search service (found in Azure Portal > Search Service > Keys)
AZURE_SEARCH_KEY = "your-azure-search-admin-key"

# The name of the search index to use for document storage and retrieval
AZURE_SEARCH_INDEX = "your-search-index-name"

# The deployment name for the text embedding model in Azure OpenAI
AZURE_OPENAI_EMBEDDING_DEPLOYMENT = "your-embedding-deployment-name"

# The full endpoint URL for your Azure Search service
AZURE_SEARCH_ENDPOINT = "https://your-search-service-name.search.windows.net"

# Azure OpenAI Configuration
# The endpoint URL for your Azure OpenAI service (found in Azure Portal > OpenAI > Keys and Endpoint)
AZURE_OPENAI_ENDPOINT = "https://your-openai-service-name.openai.azure.com/"

# The API key for your Azure OpenAI service
AZURE_OPENAI_KEY = "your-azure-openai-api-key"

# The deployment name for the GPT model in Azure OpenAI (e.g., gpt-4o, gpt-35-turbo)
AZURE_OPENAI_DEPLOYMENT = "your-gpt-deployment-name"
